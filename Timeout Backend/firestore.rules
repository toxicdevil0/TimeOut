rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Secure rules for hackathon demo
    
    // HACKATHON-SAFE RULES: Limited time window and rate limiting
    
    // Allow demo access for hackathon period only
    match /users/{userId}/tokens/{document=**} {
      allow read, write: if isValidDemoRequest();
    }
    
    match /users/{userId} {
      allow read, write: if isValidDemoRequest();
    }
    
    match /studyRooms/{roomId} {
      allow read, write: if isValidDemoRequest();
    }
    
    match /sessions/{sessionId} {
      allow read, write: if isValidDemoRequest();
    }
    
    // Helper function for demo validation
    function isValidDemoRequest() {
      // Allow access only during hackathon dates (adjust as needed)
      let hackathonStart = timestamp.date(2025, 10, 10); // Oct 10, 2025
      let hackathonEnd = timestamp.date(2025, 10, 12);   // Oct 12, 2025
      let now = request.time;
      
      return now >= hackathonStart && 
             now <= hackathonEnd &&
             request.resource.data.size() < 50; // Limit data size
    }
    
    // Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
    
